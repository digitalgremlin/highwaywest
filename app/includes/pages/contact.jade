                        input#email(type="text")
                        div.large-12.columns
                            label Resort Interested In:
                            select
                                option(option="Flying Flags RV Resort & Campground") Flying Flags RV Resort & Campground
                                option(option="Flying Flags RV Resort & Campground") Flying Flags RV Resort & Campground
                                option(option="Flying Flags RV Resort & Campground") Flying Flags RV Resort & Campground 
                    li
